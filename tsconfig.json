{
  "compilerOptions": {
    "skipLibCheck": true,
    "lib": [
      "ESNext"
    ],
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "outDir": "./dist/cjs"
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
    "compilerOptions": {
      "lib": [
        "ESNext"
      ],
      "moduleResolution": "node",
      "esModuleInterop": true,
      "target": "ESNext",
      "module": "esnext"
    }
  },
  "include": [
    "./src"
  ],
  "rootDir": "./src"
}