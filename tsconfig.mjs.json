{
  "compilerOptions": {
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "auto",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "declaration": true,
    "declarationDir": "./dist/typings",
    "outDir": "./dist/mjs"
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
    "compilerOptions": {
      "lib": [
        "ESNext"
      ],
      "target": "ESNext",
      "module": "ESNext",
      "esModuleInterop": true
    }
  },
  "include": [
    "./src"
  ],
  "rootDir": "./src"
}